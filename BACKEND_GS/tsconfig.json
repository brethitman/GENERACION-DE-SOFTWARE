{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true

    /* Opción A: sin ignoreDeprecations */
    /* Opción B: si quieres silenciar, usa: "ignoreDeprecations": "5.0" */
  },
  "include": ["src", "src/types"],
  "exclude": ["node_modules", "dist"]
}
